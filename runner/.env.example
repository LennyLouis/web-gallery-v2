# =================================
# WEB GALLERY EXPORT RUNNER
# =================================

# Environment
NODE_ENV=production

# =================================
# SUPABASE CONFIGURATION
# =================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =================================
# S3/MINIO CONFIGURATION
# =================================
S3_ENDPOINT=http://minio:9000
S3_PUBLIC_ENDPOINT=https://s3.yourdomain.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=web-gallery
S3_FORCE_PATH_STYLE=true

# =================================
# RUNNER CONFIGURATION
# =================================

# Polling intervals (milliseconds)
RUNNER_POLL_INTERVAL_MS=5000          # How often to check for new jobs (5 seconds)
RUNNER_CLEANUP_INTERVAL_MS=3600000    # How often to cleanup expired files (1 hour)

# Processing limits
RUNNER_MAX_CONCURRENT_JOBS=2          # Max simultaneous export jobs
RUNNER_MAX_PHOTOS_PER_BATCH=5         # Photos processed per batch
RUNNER_MAX_CONCURRENT_DOWNLOADS=3     # Concurrent S3 downloads per batch

# Timeouts (milliseconds)
RUNNER_DOWNLOAD_TIMEOUT_MS=60000      # Timeout for downloading single photo (60s)
RUNNER_UPLOAD_TIMEOUT_MS=300000       # Timeout for ZIP upload to S3 (5 minutes)

# File management
RUNNER_DOWNLOAD_URL_EXPIRY_HOURS=12   # How long download URLs are valid
RUNNER_COMPRESSION_LEVEL=1            # ZIP compression level (1=fast, 9=best)

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info                        # Log level (debug, info, warn, error)
ENABLE_DETAILED_LOGS=false            # Enable verbose logging for debugging

# =================================
# HEALTH CHECK
# =================================
# The runner includes built-in health checks
# No additional configuration needed