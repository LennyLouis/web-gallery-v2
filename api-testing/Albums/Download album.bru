meta {
  name: Download album
  type: http
  seq: 7
}

get {
  url: {{apiUrl}}/albums/{{testAlbumId}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

tests {
  test("should return 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("should return album with photos", function() {
    expect(res.getBody().album).to.be.an('object');
    expect(res.getBody().album.photos).to.be.an('array');
  });
  
  test("should match created album", function() {
    const album = res.getBody().album;
    expect(album.title).to.equal('Mon Premier Album');
    expect(album.location).to.equal('Paris, France');
  });
}
